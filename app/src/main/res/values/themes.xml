<resources>
    <!-- Base application theme. -->
    <style name="Theme.Kurome" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/kurome_primary</item>
        <item name="colorPrimaryVariant">@color/kurome_primary</item>
        <item name="colorOnPrimary">@color/kurome_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/kurome_orange</item>
        <item name="colorSecondaryVariant">@color/kurome_orange</item>
        <item name="colorOnSecondary">@color/kurome_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/kurome_primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Kurome.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorOnPrimary">@color/kurome_primary</item>
    </style>
</resources>